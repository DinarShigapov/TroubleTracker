@{
    ViewData["Title"] = "Отчёт о проекте";
}

@model BugTrackerV1.Models.ViewModel.ReportViewModel
<div class="container-fluid ">

    <div class="row">
        <div class="card my-1 p-3">
            <h1>Отчеты</h1>

            <p>Общее количество задач: @Model.IssueCount</p>
            <p>Открытые задачи: @Model.OpenIssueCount</p>
            <p>Закрытые задачи: @Model.ClosedIssueCount</p>
            <p>Текущие задачи: @Model.InProgressIssueCount</p>

        </div>

        <div class="card my-1 p-3">
            <h2>Задачи в спринте</h2>
            <div id="sprintChart">
                @foreach (var item in Model.IssuesBySprint)
                {
                    <div>
                        <p>@item.Key: @item.Value</p>
                    </div>
                }
            </div>
        </div>
        <div class="card my-1 p-3">
            <h2>Задачи пользователя</h2>
            <div id="userChart">
                @foreach (var item in Model.IssuesByUser)
                {
                    <div>
                        <p>@item.Key: @item.Value</p>
                    </div>
                }
            </div>
        </div>

        <div class="card my-1 p-3">
            <h2>Задачи проекта</h2>
            <div id="projectChart">
                @foreach (var item in Model.IssuesByProject)
                {
                    <div>
                        <p>@item.Key: @item.Value</p>
                    </div>
                }
            </div>
        </div>
@*         <form method="post" action="/Reports/DownloadHtmlReport">
            <button type="submit">Download Report as HTML</button>
        </form> *@
    </div>

</div>

