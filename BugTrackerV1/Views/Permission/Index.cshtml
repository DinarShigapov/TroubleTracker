@model BugTrackerV1.Models.ViewModel.PermissionVM.PermissionViewModel;

@{
    ViewData["Title"] = "Управление правами";
    Layout = "_ContentNavbarLayout";
    ViewData["isMenu"] = false; // Отключаем боковое меню
}

@section VendorScripts {
    <script src="~/vendor/js/permission-script.js" asp-append-version="true"></script>
}



<img class="position-absolute start-50 translate-middle" src="~/img/icons/gearIcon.svg" style="
    top: 464px;
    z-index: -1;
    height: 469px;
    opacity: 0.025;">

<h2>Управление правами</h2>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3>Роли</h3>
            <div class="card mb-3">
                <form id="roleForm">
                    <select id="roleSelect" tabindex="1" class="form-control">
                        <option value="">Выберите роль</option>
                        @foreach (var role in Model.AllRoles)
                        {
                            <option value="@role.Value">@role.Text</option>
                        }
                    </select>
                </form>
                <div id="rolePermissionsContainer"></div>
            </div>
        </div>
        <div class="col-md-6">
            <h3>Пользователи</h3>
            <div class="card mb-3">
                <form id="userForm">
                    <select id="userSelect" class="form-control">
                        <option value="">Выберите пользователя</option>
                        @foreach (var user in Model.AllUsers)
                        {
                            <option value="@user.Value">@user.Text</option>
                        }
                    </select>
                </form>
                <div id="userPermissionsContainer"></div>
            </div>
        </div>
    </div>
</div>