@model BugTrackerV1.Models.ViewModel.PermissionVM.RolePermissionViewModel;

<div class="card-body">
    <form method="post" asp-action="UpdateRolePermissions">
        <input type="hidden" name="RoleId" value="@Model.RoleId" />
        @for (int i = 0; i < Model.Permissions.Count; i++)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="Permissions[@i].IsSelected" value="true" @(Model.Permissions[i].IsSelected ? "checked" : "") />
                <input type="hidden" name="Permissions[@i].PermissionId" value="@Model.Permissions[i].PermissionId" />
                <input type="hidden" name="Permissions[@i].PermissionName" value="@Model.Permissions[i].PermissionName" />
                <label class="form-check-label">@Model.Permissions[i].PermissionName</label>
            </div>
        }
        <button type="submit" class="btn btn-primary mt-2">Сохранить</button>
    </form>
</div>