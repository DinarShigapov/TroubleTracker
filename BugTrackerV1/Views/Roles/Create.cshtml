@model BugTrackerV1.Models.ViewModel.RoleVM.CreateRoleViewModel;
@{
    ViewData["Title"] = "Создание роли";
    Layout = "_ContentNavbarLayout";
    ViewData["isMenu"] = false;
}

<h2>Создание роли</h2>

<div class="card m-3 p-3">
    <form asp-action="Create">
        <div class="form-group">
            <label asp-for="NameRole" class="control-label">Название</label>
            <input asp-for="NameRole" class="form-control" />
            <span asp-validation-for="NameRole" class="text-danger"></span>
        </div>
        <div class="form-group my-2">
            <label asp-for="Description" class="control-label">Описание</label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-primary" />
        </div>
    </form>
</div>